@model CategoryVM

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upsert" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Category.Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="@Model.Category.ImageUrl" class="p-0">Image</label>
                <input type="file" name="ImageFile" class="form-control">
                <span asp-validation-for="@Model.Category.ImageUrl" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Category.ParentCategoryId" class="control-label"></label>
                <select asp-for="Category.ParentCategoryId" class="form-control" asp-items="Model.CategoryList">
                    <option value="">-- Select Parent Category --</option> <!-- Placeholder option -->
                </select>
                <span asp-validation-for="Category.ParentCategoryId" class="text-danger"></span> <!-- Validation message -->
            </div>
            <div class="form-group">
                
                    <button type="submit" class="btn btn-primary form-control">@((Model.Category.Id == 0) ? "Create" : "Update")</button>
               
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
