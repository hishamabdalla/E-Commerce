@model ProductWithCategorySelectListVM
@{
    ViewData["Title"] = "Upsert";
}

<form asp-action="Upsert" method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@((Model.Product.Id == 0) ? "Create": "Update") Product</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-10">
                <div class="mb-3 row p-1">
                    <input type="hidden" asp-for="Product.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3 row p-1">
                        <label asp-for="Product.Name" class="p-0"></label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 row p-1">
                        <label asp-for="Product.Description" class="p-0"></label>
                        <textarea asp-for="Product.Description" class="form-control"></textarea>
                    </div>

                    <div class="mb-3 row p-1">
                        <label asp-for="@Model.Product.ImageUrl" class="p-0">Image</label>
                        <input type="file" name="ImageFile" class="form-control">
                        <span asp-validation-for="@Model.Product.ImageUrl" class="text-danger"></span>
                    </div>
                   
                    <div class="mb-3 row p-1">
                        <label asp-for="Product.CategoryId" class="p-0"></label>
                        <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control">
                            <option selected>--Select Category--</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                   
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">@((Model.Product.Id == 0) ? "Create" : "Update")</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-dark border  form-control">
                        Back to List
                    </a>
                </div>
            </div>
            

        </div>
    </div>
    </form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}